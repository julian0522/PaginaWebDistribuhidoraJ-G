---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { ClientRouter } from "astro:transitions";
import "../styles/global.css";

const title = "Distribuidora Agrícola J&G SAS | Insumos agrícolas en Colombia";
const description = "Distribución y comercialización de insumos agrícolas como fertilizantes, plaguicidas, semillas y más, con cobertura a nivel nacional.";
const keywords = "insumos agrícolas, fertilizantes, plaguicidas, semillas, agricultura, Colombia, distribuidores agrícolas";
---

<!doctype html>
<html lang="es">
  <head>
    <!--Metadatos Para El Seo -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content="Distribuidora Agrícola J&G SAS" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="canonical" href="https://tusitio.com/" />

    <meta charset="UTF-8" />
    <link rel="icon" type="image/webp" href="/logo1.webp" />
    <meta name="generator" content={Astro.generator} />

    <!--Script para inicializar flowbite cada vez que se cambie de pagina hay que hacerlo manualmente debido al uso de transitions en astro -->
    <script is:inline src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js"></script>
    <script type="module" src="/scripts/initFlowBite.js"></script>

    <ClientRouter />
  </head>
  <body class="flex flex-col min-h-screen">
    <!-- Header fijo en la parte superior -->
    <header class="w-full">
      <Header />
    </header>

    <!-- Contenido dinámico que ocupa el espacio disponible -->
    <main class="flex-1">
      <slot />
      <a
        href="https://wa.me/573108110572?text=Hola!%20Quisiera%20más%20información%20sobre%20sus%20productos"
        class="fixed bottom-6 right-6 z-50 bg-green-500 text-white p-4 rounded-full shadow-lg border-4 border-white
         hover:translate-y-[-4px] transition-all duration-300 ease-in-out hover:bg-green-600"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="Contáctanos por WhatsApp"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="w-6 h-6"
          fill="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            d="M20.52 3.48A11.84 11.84 0 0 0 12.03 0C5.42 0 0 5.43 0 12.13c0 2.14.55 4.23 1.6 6.07L0 24l6.01-1.58a12.06 12.06 0 0 0 6.02 1.56c6.6 0 12-5.43 12-12.13 0-3.21-1.24-6.23-3.51-8.37Zm-8.5 18.38a10.15 10.15 0 0 1-5.12-1.38l-.37-.22-3.57.94.96-3.48-.24-.36a10.2 10.2 0 0 1-1.59-5.49c0-5.62 4.58-10.2 10.21-10.2 2.73 0 5.3 1.07 7.22 3a10.14 10.14 0 0 1-7.5 17.19Zm5.48-7.65c-.3-.15-1.76-.86-2.04-.96-.27-.1-.46-.15-.65.15-.2.3-.75.95-.93 1.14-.17.2-.34.22-.64.07-.3-.15-1.25-.46-2.38-1.48-.88-.79-1.47-1.76-1.64-2.06-.17-.3-.02-.47.13-.62.13-.13.3-.35.45-.52.15-.17.2-.3.3-.5.1-.2.05-.37 0-.52-.15-.2-.65-1.57-.9-2.15-.24-.58-.48-.5-.65-.5h-.55c-.2 0-.52.07-.8.37-.27.3-1.05 1.02-1.05 2.5s1.08 2.9 1.24 3.1c.15.2 2.12 3.25 5.13 4.56.72.31 1.28.49 1.7.63.72.23 1.38.2 1.9.12.58-.09 1.76-.72 2.01-1.42.25-.7.25-1.3.18-1.42-.1-.15-.27-.22-.57-.36Z"
          ></path>
        </svg>
      </a>
    </main>

    <!-- Footer siempre al fondo -->
    <footer class="w-full">
      <Footer />
    </footer>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family: "Nexa", sans-serif;
  }
</style>
